{
  "name": "@repo/db",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules .drizzle",
    "dev": "tsc",
    "push": "pnpm drizzle-kit push",
    "studio": "pnpm drizzle-kit studio",
    "view": "concurrently \"pnpm drizzle-kit studio\" \"pnpm dlx drizzle-lab visualizer\" \"sleep 1 && pnpm dlx drizzle-view\""
  },
  "dependencies": {
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.44.5",
    "pg": "^8.16.3",
    "@repo/env": "workspace:*"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "typescript": "catalog:"
  }
}
